<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/pixelCactusAnim.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/pixelBlueAnim.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/pixelPinkAnim.css' | url }}">
    <!-- Added link to the jQuery Library -->  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">

  </head>
  <body>
    <header>
      <h1 class="home"><a href="{{ '/#about' | url }}">{{ metadata.title }}</a></h1>
      <!--
      <ul class="nav">
        {%- for nav in collections.nav | reverse -%}
        <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
        {%- endfor -%}
      </ul>
      -->
      <ul class="nav">
        <li class="nav-item"><a href="/#projects">Projects</a></li>
        <li class="nav-item"><a href="/#contact">Contact</a></li>
        <li class="nav-item"><a href="/blog/">Blog</a></li>
      </ul>
    </header>

    <main {% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
<script type="text/javascript">

$(document).ready(function() { // jQuery start

var techList = {
  bmg: ["HTML","CSS","JavaScript","XHR"],
  gif: ["html","css","jquery","ajax"],
  lgp: ["html","materialize","jquery","firebase","ajax"],
  mkd: ["HTML","CSS","jQuery"],
  mcd: ["HTML","CSS","jQuery"]
}

function listProjectDetails() {
  var proj = $(this).attr("data-tech-list");
  var list = $(".tech-list");
  
  // return project list items to normal size and left-alignment
  $(".project-item").animate({ paddingLeft: "0", fontWeight: "400" }, 50);
  

  // empty and hide the list
  list.hide();
  list.empty();
  
  // populate list from array
  for (var i of techList[proj]) {
    
    // create list item
    var item = $("<li>").text(i);
    item.addClass("tech-used");

    // append item to list for display
    list.append(item);
  }
  
  // slide clicked project right
  $(this).animate({ paddingLeft: "1em", fontWeight: "900" }, 100);

  // display populated list
  list.fadeIn(400);
}

// Global event listeners
$(document).on("hover",".project-item", listProjectDetails);
// $(document).on("hover",".project-item", listProjectDetails);


}); // jQuery end


  </body>
</html>
